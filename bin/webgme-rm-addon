#!/usr/bin/env node

'use strict';
var Command = require('commander').Command,
    program = new Command(),
    nop = require('nop'),
    utils = require('../lib/utils'),
    AddonManager = require('../lib/AddonManager'),
    manager = new AddonManager();

program
    .arguments('<name>')
    .action(function(name) {
        program.name = name;
        manager.rm(program, nop);
    })
    .parse(process.argv);
