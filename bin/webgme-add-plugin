#!/usr/bin/env node
/*jshint node: true*/

'use strict';
var Command = require('commander').Command,
    program = new Command(),
    utils = require('../lib/utils'),
    nop = require('nop'),
    PluginManager = require('../lib/PluginManager');

var manager = new PluginManager();

program.arguments('<name> <project>')
    .action(function(name, project) {
        program.name = name;
        program.project = project;
        manager.add(program, nop);
    })
    .option('-n, --package-name [name]', 'App name from that package.json')
    .parse(process.argv);
