#!/usr/bin/env node

var Command = require('commander').Command,
    program = new Command(),
    version = require('../package.json').version,
    allActions = ['new', 'add', 'remove', 'ls'];

/* * * * * * * * * * Components * * * * * * * * * */
program
    .version('v'+version)
    .command('import <component>', 'Import a WebGME component from another project')
    .alias('m');

program
    .command('mount <router> <endpoint>', 'Mount REST router at the given endpoint')
    .alias('m');

program
    .command('new <component>', 'Create new WebGME component')
    .alias('n');

program
    .command('ls <component>', 'List all WebGME components')
    .alias('l');

program
    .command('rm <component>', 'Remove a WebGME component')
    .alias('r');

program
    .command('enable <component>', 'Enable a WebGME component')
    .alias('e');

program
    .command('disable <component>', 'Disable a WebGME component')
    .alias('d');

program
    .command('init [name]', 'Initialize new WebGME app')
    .alias('i');

program
    .command('info', 'Get installation info');

program
    .command('start', 'Start the existing WebGME app')
    .alias('s')
    .parse(process.argv);
